{{!-- Handlebars template example --}}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{{pageTitle}}</title>
</head>
<body>
    <header>
        <h1>{{title}}</h1>
        <nav>
            <ul>
                {{#each navItems}}
                <li><a href="{{url}}">{{text}}</a></li>
                {{/each}}
            </ul>
        </nav>
    </header>

    <main>
        <section>
            <h2>Welcome</h2>
            {{#if user}}
                <p>Hello, {{user.name}}!</p>
            {{else}}
                <p>Please log in.</p>
            {{/if}}
        </section>

        <section>
            <h2>Users</h2>
            <ul>
                {{#each users}}
                <li>
                    <strong>{{name}}</strong> - {{email}}
                    {{#if active}}
                        <span class="badge">Active</span>
                    {{/if}}
                </li>
                {{else}}
                <li>No users found.</li>
                {{/each}}
            </ul>
        </section>

        {{#with settings}}
        <section>
            <h2>Settings</h2>
            <p>Theme: {{theme}}</p>
            <p>Language: {{language}}</p>
        </section>
        {{/with}}

        {{#unless hideFooter}}
        <section>
            <h2>Additional Content</h2>
            <p>This section is visible.</p>
        </section>
        {{/unless}}
    </main>

    <footer>
        <p>&copy; {{year}} {{siteName}}</p>
    </footer>
</body>
</html>

