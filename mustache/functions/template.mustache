<!DOCTYPE html>
<html>
<head>
    <title>{{pageTitle}}</title>
</head>
<body>
    <header>
        <h1>{{title}}</h1>
    </header>

    <main>
        {{#user}}
        <p>Hello, {{name}}!</p>
        {{/user}}

        {{^user}}
        <p>Please log in.</p>
        {{/user}}

        <h2>Users</h2>
        <ul>
            {{#users}}
            <li>{{name}} - {{email}}</li>
            {{/users}}
        </ul>

        {{#hasItems}}
        <h2>Items</h2>
        <ul>
            {{#items}}
            <li>{{.}}</li>
            {{/items}}
        </ul>
        {{/hasItems}}

        <p>Escaped: {{content}}</p>
        <p>Unescaped: {{{rawContent}}}</p>
    </main>

    <footer>
        <p>&copy; {{year}} {{siteName}}</p>
    </footer>
</body>
</html>
